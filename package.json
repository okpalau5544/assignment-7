{
  "name": "assignment-template",
  "version": "1.1.0",
  "description": "This is a template repository for the first assignment in BVD 103 at McMaster Continuing Education.",
  "main": "index.ts",
  "scripts": {
    "start-server": "tsx ./index.ts",
    "start-book-server": "tsx ./src/books/server.ts",
    "start-order-server": "tsx ./src/orders/server.ts",
    "start-warehouse-server": "tsx ./src/warehouse/server.ts",
    "lint": "eslint \"src/**/*.ts\" \"*.ts\" \"books/**/*.ts\" \"orders/**/*.ts\" \"warehouse/**/*.ts\"",
    "fix-lint": "eslint --fix \"src/**/*.ts\" \"*.ts\" \"books/**/*.ts\" \"orders/**/*.ts\" \"warehouse/**/*.ts\"",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "test:ci": "vitest run",
    "gen:spec": "tsoa spec --config tsoa.json",
    "build:swagger": "npm run gen:spec"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "@types/amqplib": "^0.10.7",
    "amqplib": "^0.10.8",
    "koa": "^2.15.2",
    "koa-bodyparser": "^4.4.1",
    "koa-qs": "^3.0.0",
    "koa-zod-router": "^2.2.0",
    "koa2-swagger-ui": "^5.10.0",
    "mongodb": "^6.18.0",
    "tsoa": "^6.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.13.1",
    "@types/koa": "~2.15.0",
    "@types/koa__cors": "~5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-qs": "~2.0.3",
    "@types/node": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "mongodb-memory-server": "^9.1.8",
    "typescript": "^5.4.3",
    "vitest": "^3.2.4"
  }
}
